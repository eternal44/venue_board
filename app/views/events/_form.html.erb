<%= form_for @event, url: @event, html: { multipart: true } do |form| %>
  <%# <ul class="nav navbar-nav"> %>
    <% if @event.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event
          <ul>
            <% @event.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
      </div>
    <% end %>
    <div class="row">
      <div class='form-group col-sm-6'>
        <%= form.label :title %><br>
        <%= form.text_field :title, class: 'form-control', size: 57 %>
      </div>
    </div>
    <div class="row">
      <div class='form-group col-sm-6'>
        <%= form.label :location %>
        <%= form.text_field(:location, class: 'form-control', size: 57) %>
      </div>
    </div>
      <div class="row">
        <div class="form-group col-sm-6">
          <div class='input-group datetimepicker9'>
            <%= form.label :start_time %><br>
            <%= form.text_field(:start_time, class: 'form-control input-group ') %>
            <span class="input-group-addon">
              <span class="glyphicon glyphicon-calendar">
              </span>
            </span>
          </div>
          <script type="text/javascript">
$(function () {
  $('.datetimepicker9').datetimepicker({
    viewMode: 'years'
  });
});
          </script>
        </div>
      </div>
    <div class="row">
      <div class="form-group col-sm-6">
        <div class='input-group datetimepicker9'>
          <%= form.label :end_time %><br>
          <%= form.text_field(:end_time, class: 'form-control input-group ') %>
          <span class="input-group-addon">
            <span class="glyphicon glyphicon-calendar">
            </span>
          </span>
        </div>
        <script type="text/javascript">
$(function () {
  $('.datetimepicker9').datetimepicker({
    viewMode: 'years'
  });
});
        </script>
      </div>

    </div>
    <div class='action'>
      <%= form.submit class: 'btn btn-primary' %>
    </div>
  <% end %>
