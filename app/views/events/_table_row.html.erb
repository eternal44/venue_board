<tr id="job <%= job.id %>">
  <td><%= link_to job.title, job %></td>
  <td><%= link_to job.user.profile.try(:name), profile_path(job.user.profile.id) %></td>
  <td><%= link_to "Edit", edit_job_path(job) %></td>
  <td><%= link_to "Destroy", job_path(job), method: :delete, data: {confirm: 'Are you sure?' } %></td>
</tr>

