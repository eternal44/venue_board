<% if current_user.id == @profile.user_id %>
  <%= link_to "Edit | ", edit_profile_path(@profile) %>
<% end %>
<%= link_to 'Back', :back %>
<h2><%= @profile.name %></h2>
<h4><%= number_to_percentage(@profile.score, precision: 0) %></h4> <br>

<%= link_to like_profile_path(@profile), method: :put do %>
  <span class="glyphicon glyphicon-thumbs-up"></span>
<% end %>
<%= @profile.get_upvotes.size %>

<%= link_to dislike_profile_path(@profile), method: :put do %>
  <span class="glyphicon glyphicon-thumbs-down"></span>
<% end %>
<%= @profile.get_downvotes.size %>


<%= @profile.name %></br>
<%= @profile.user.role %></br>

<h3>Event History</h3>
<table class="table table-bordered table-condensed table-striped">
  <thead>
    <tr>
      <th>Event Title </th>
      <th>Status</th>
      <th>Location</th>
      <th>Start Time</th>
      <th>End Time</th>
    </tr>
  </thead>
  <% @profile.user.events.each do |event| %>
    <tbody>
      <td><%= event.title %></td>
      <td><%= event.status %></td>
      <td><%= event.location %></td>
      <td><%= event.start_time %></td>
      <td><%= event.end_time %></td>
    </tbody>
  <% end %>
</table>


<%= render partial: "comments/form", locals: {commentable: @profile} %>
<%= render partial: "comments/comments", locals: {commentable: @profile} %>


